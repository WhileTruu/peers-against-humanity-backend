{
  "name": "SocketsAgainstHumanity",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "autoprefixer": "6.5.1",
    "babel-cli": "^6.22.2",
    "babel-core": "6.17.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "17.0.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "4.0.2",
    "detect-port": "1.0.1",
    "dotenv": "2.0.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "2.21.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.10.0",
    "fs-extra": "0.30.0",
    "jest": "^18.1.0",
    "json-loader": "0.5.4",
    "object-assign": "4.1.0",
    "path-exists": "2.1.0",
    "promise": "7.1.1",
    "react-dev-utils": "^0.4.2",
    "recursive-readdir": "2.1.0",
    "whatwg-fetch": "1.0.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "bcrypt": "^1.0.1",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.2.1",
    "knex": "^0.12.6",
    "pg": "^6.1.2",
    "supertest": "^3.0.0",
    "winston": "^2.3.0"
  },
  "scripts": {
    "test:unit": "node scripts/test.js ./src/**/*.unit.spec.{js,jsx} --runInBand",
    "test:integration": "node scripts/test.js ./src/**/*.integration.spec.js --runInBand",
    "start": "scripts/start.sh",
    "build": "scripts/build.sh",
    "circleci:test": "CONNECTION_STRING='postgres://ubuntu:@localhost:5432/circle_test' node scripts/test.js ./src/**/*.*.spec.js --runInBand --forceExit",
    "database:rollback": "scripts/migrate.rollback.sh",
    "database:latest": "scripts/migrate.latest.sh",
    "database:seed": "scripts/seed.run.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|dist|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "react/jsx-filename-extension": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "semi": [2, "never"]
    }
  }
}
